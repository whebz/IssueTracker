<!-- Main content -->
<style>
    body, .main, .container-fluid {
        overflow: hidden;
    }
</style>
<main class="main">
    <ol class="breadcrumb" style="margin-bottom:3px">
        <li class="breadcrumb-item">&nbsp;</li>
        <!-- add button -->
        <li class="breadcrumb-menu hidden">
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <a class="btn btn-secondary" href="./"><i class="icon-plus"></i> &nbsp;Add Issue</a>
            </div>
        </li>
    </ol>
    <div class="container-fluid" style="padding:5px; margin: 0">
        <div class="row" id="filter-row">
            <div class="col">
                <div class="card card-default">
                    <div class="card-block">
                        <div class="row">
                            <div class="col">
                                <div class="form-horizontal ">
                                    <div class="form-group row">
                                        <label class="col-md-3 form-control-label" for="select">Status</label>
                                        <div class="col-md-9">
                                            @Html.DropDownList("IssueStatus", @Model.Status, new { @class = "form-control", id = "IssueStatus" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 form-control-label" for="select">Client</label>
                                        <div class="col-md-9">
                                            @Html.DropDownList("IssueClient", @Model.Client, new { @class = "form-control", id = "IssueClient" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 form-control-label" for="select">Project</label>
                                        <div class="col-md-9">
                                            @Html.DropDownList("IssueProject", @Model.Project, new { @class = "form-control", id = "IssueProject" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col">
                                <div class="form-horizontal ">
                                    <div class="form-group row">
                                        <label class="col-md-3 form-control-label" for="select">Assigned Status</label>
                                        <div class="col-md-9">
                                            <select id="IssueAssigned" name="IssueAssigned" class="form-control" size="1">
                                                <option value="0">All</option>
                                                <option value="1">Not Assigned</option>
                                                <option value="2">Assigned</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 form-control-label" for="select">Priority</label>
                                        <div class="col-md-9">
                                            @Html.DropDownList("IssuePriority", @Model.Priority, new { @class = "form-control", id = "IssuePriority" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-center">
                                <button class="btn btn-info">search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-block" id="grid-block" style="padding:1px 1px;">
                        @(Html.Kendo().Grid<IssueTracker.Model.ViewModel.IssueViewModel>()
                            .Name("grid")
                            .Columns(columns =>
                            {
                                columns.Bound(p => p.Id)
                                       .ClientTemplate("<a class='btn btn-secondary' onclick='edit(\"#= Id #\");'><span class='fa fa-edit' /></a><a class='btn btn-danger' onclick='destroyAccount(\"#= Id #\");'><span class='fa fa-remove' /></a>")
                                       .Title("").Width(100);
                                columns.Bound(p => p.Title).Width(150);
                                
                                
                                columns.Bound(p => p.ProjectName).Width(180);
                                columns.Bound(p => p.AssignedToName).Width(180);
                                columns.Bound(p => p.Priority).Width(60).ClientTemplate("<span class='priority-issue'>#: Priority #</span>");
                                columns.Bound(p => p.IssueStatus).Width(100).ClientTemplate("<span class='priority-issue'>#: StatusDescription #</span>");

                            })
                            .Scrollable()
                            .Sortable()
                            .HtmlAttributes(new { style = "height: 100%"})
                            .Pageable(pageable => pageable
                                .PageSizes(true)
                                .ButtonCount(15)
                            )
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .PageSize(20)
                                .Read(read => read.Action("Issues_Read", "Issue").Data("gridWhere"))
                            )
                        )
                    </div>
                </div>
            </div>
            <!--/.col-->
        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>
<script>
    $(document).ready(function () {
        $(window).on('resize', function () {
            setGridBlockSize();
        });
        setGridBlockSize();
        grid = $("#grid").data("kendoGrid");
    });
    function setGridBlockSize() {
        $("#grid-block").height($(window).height() - $(".app-header").outerHeight() - $(".breadcrumb").outerHeight() - $("#filter-row").outerHeight() - $(".app-footer").outerHeight() - 14);
    }
    function gridWhere() {

        return {

        }
    }
</script>