<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - My Kendo UI MVC Application</title>
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Static/plugin/kendo/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Static/plugin/kendo/styles/kendo.mobile.all.min.css" rel="stylesheet" />
    <link href="~/Static/plugin/kendo/styles/kendo.metro.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="~/Static/css/common.css" rel="stylesheet" />
    <link href="~/Static/css/sidebar.css" rel="stylesheet" />
    <link href="~/Static/css/metroThemeCustomization.css" rel="stylesheet" />
    @RenderSection("PageStyles", false)
    @RenderSection("PageStylesPartial", false)
    <script src="~/Static/plugin/kendo/js/jquery.min.js"></script>
    <script src="~/Static/plugin/kendo/js/kendo.all.min.js"></script>
    <script src="~/Static/plugin/kendo/js/kendo.aspnetmvc.min.js"></script>
    <script src="~/Static/plugin/kendo/js/kendo.timezones.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.0.3/js.cookie.min.js"></script>
    <script src="~/Static/plugin/kendo/js/pako_deflate.min.js"></script>
</head>
<body>
    <div id="BaseUrl" data-baseurl="@Context.Request.Url.GetLeftPart(UriPartial.Authority)@Url.Content("~/")"></div>
        <script src="~/Static/js/layout.js"></script>
    <script id="button-template" type="text/x-kendo-template">
    </script>
    <script id="tooltip-template" type="text/x-kendo-template">
        <div class="image-wrapper">
            <img src="~/files/profile/default-contact.png" style="border-radius: 100%" />
        </div>
        <p class="name">Antonio Morandi</p>
        <p>antonio.morandi@progress.com</p>
        @(Html.Kendo().Button()
            .Name("signInButton")
            .HtmlAttributes(new { @class = "k-primary" })
            .Content("Sign Out")
            .Events(ev => ev.Click("onClick"))
            .ToClientTemplate()
        )
    </script>
    <script type="text/kendo-ui" id="menu-item-template">
        <span>
            <img src='~/files/profile/default-contact.png' />
        </span>
    </script>
    <header class="main-header">
        <a href="@Url.Action("Index", "Home")" title="Go to WebMail">
            <h1 class="logo">
                WebMail
            </h1>
        </a>
        @(Html.Kendo().Menu()
                .Name("mainMenu")
                .Items(items =>
                {
                    items.Add().Text("Mail").Action("Index", "Home");
                    items.Add().Text("Calendar").Action("Index", "Calendar");
                    items.Add().Text("Account").Action("List", "Account");
                    items.Add().Text("Tasks").Action("Index", "Tasks");
                    items.Add().Text("<span class='image-wrapper'><img src='http://demos.telerik.com/kendo-ui/content/web/Customers/PICCO.jpg'/><span/>").Encoded(false);
                })
        )
        @(Html.Kendo().Tooltip()
                .For("#mainMenu > li:last")
                .ShowOn(TooltipShowOnEvent.Click)
                .AutoHide(false)
                .ContentTemplateId("tooltip-template")
        )
    </header>
    <content class="main-content">
        @RenderBody()
    </content>
</body>
</html>